<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:padding="8dp">
        <ImageView android:id="@+id/menu_image"
                   android:layout_centerVertical="true"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:src="@drawable/nuevo"
                   android:scaleType="fitStart" android:layout_marginLeft="5dp"/>
        <TextView android:id="@+id/menu_text"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:layout_gravity="center"
                  android:layout_centerVertical="true"
                  style="@android:style/TextAppearance.Large" android:layout_alignParentLeft="true"
                  android:layout_marginLeft="77dp"/>
    </RelativeLayout>
</LinearLayout>