<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="?android:listPreferredItemHeight" android:paddingLeft="15dp">
        <ImageView android:id="@+id/draft_group_item_img"
                   android:layout_width="70dp"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:src="@drawable/notepad"/>
        <TextView android:id="@+id/draft_group_item_text"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/draft_group_item_img" style="@android:style/TextAppearance.Medium"
                  android:layout_marginRight="10dp"
                  android:ellipsize="marquee"
                  android:scrollHorizontally="true"
                  android:focusable="true"
                  android:focusableInTouchMode="true"/>
    </RelativeLayout>
</LinearLayout>