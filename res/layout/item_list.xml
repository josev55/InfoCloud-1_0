<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <RelativeLayout android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="8dp">
            <ImageView android:id="@+id/hasUpdate"
                       android:layout_width="32dp"
                       android:layout_height="32dp"
                       android:scaleType="fitXY" android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/update" android:visibility="invisible"/>
            <TextView android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:id="@+id/formtitle"
                      android:layout_marginLeft="75dp" android:textColor="#000000" android:textSize="20dp"
                      android:layout_centerVertical="true" style="@android:style/TextAppearance.Large"
                      android:layout_alignParentLeft="true"/>
            <ImageView android:id="@+id/ivItem"
                       android:layout_centerVertical="true"
                       android:layout_height="54dp"
                       android:layout_width="56dp"
                       android:layout_alignParentLeft="true"
                       android:contentDescription="@string/app_name" android:visibility="visible"
                       android:src="@drawable/document" android:scaleType="fitXY" android:layout_marginLeft="10dp"/>

        </RelativeLayout>
</LinearLayout>
